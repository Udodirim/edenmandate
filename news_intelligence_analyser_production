        let currentCategory = '';
        let currentArticle = null;

        function loadCategory(category) {
            currentCategory = category;
            currentArticle = null;
            
            const articleList = document.getElementById('article-list');
            const articleSection = document.getElementById('article-section');
            const analyseBtn = document.getElementById('analyse-btn');
            
            articleList.innerHTML = '';
            analyseBtn.disabled = true;
            document.getElementById('results').classList.remove('active');
            
            const articles = bbcDataset[category];
            articles.forEach((article, index) => {
                const item = document.createElement('div');
                item.className = 'article-item';
                item.onclick = () => selectArticle(index);
                
                const preview = article.text.substring(0, 150) + '...';
                
                item.innerHTML = `
                    <div class="article-filename">üìÑ ${article.filename}</div>
                    <div class="article-preview">${preview}</div>
                `;
                
                articleList.appendChild(item);
            });
            
            articleSection.classList.add('active');
        }

        function selectArticle(index) {
            currentArticle = bbcDataset[currentCategory][index];
            
            document.querySelectorAll('.article-item').forEach((item, i) => {
                item.classList.toggle('selected', i === index);
            });
            
            document.getElementById('analyse-btn').disabled = false;
        }

        function analyseArticle() {
            if (!currentArticle) return;
            
            document.getElementById('results').classList.add('active');
            
            setTimeout(() => {
                document.getElementById('results').scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 100);
            
            const categoryFormatted = currentCategory.charAt(0).toUpperCase() + currentCategory.slice(1);
            document.getElementById('category-result').textContent = categoryFormatted;
            
            document.getElementById('subcategory-result').textContent = currentArticle.subcategory;
            
            const wordCount = currentArticle.text.split(/\s+/).length;
            document.getElementById('word-count').textContent = wordCount;
            
            const entities = currentArticle.ner;
            document.getElementById('entity-count').textContent = entities.length;
            
            const confidence = entities.length > 0 ? 95 : 90;
            document.getElementById('confidence').textContent = confidence + '%';
            
            const entityList = document.getElementById('entity-list');
            if (entities.length > 0) {
                entityList.innerHTML = entities.map(entity => {
                    const typeClass = entity.type.toLowerCase().replace(/\s+/g, '-').replace(/\//g, '-');
                    return `
                        <div class="entity-card">
                            <div class="entity-name">${entity.name}</div>
                            <div class="entity-title">${entity.title}</div>
                            <span class="entity-type ${typeClass}">${entity.type}</span>
                        </div>
                    `;
                }).join('');
            } else {
                entityList.innerHTML = `
                    <div class="no-results">
                        No media personalities detected in this article based on the NER dataset.
                    </div>
                `;
            }
            
            document.getElementById('insight-text').textContent = currentArticle.insight;
        }

        function resetAnalyser() {
            document.getElementById('results').classList.remove('active');
            document.getElementById('article-section').classList.remove('active');
            currentCategory = '';
            currentArticle = null;
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
</body>
</html>
